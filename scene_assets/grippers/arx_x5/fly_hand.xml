<mujoco model="X5A">
  <compiler angle="radian" autolimits="true"/>
  <default>
    <default class="robot">
      <default class="motor">
        <joint />
        <motor />
      </default>
      <default class="visual">
        <geom material="black" contype="0" conaffinity="0" group="2" />
      </default>
      <default class="collision">
        <geom material="collision_material" condim="3" contype="0" conaffinity="1" priority="1" group="1" solref="0.0005 1" solimp="0.99 0.999 1e-05" friction="1 0.01 0.01" />
      </default>
    </default>
  </default>

  <asset>
    <material name="black" rgba="1 1 1 1" />
    <material name="default_material" rgba="0.7 0.7 0.7 1" />
    <material name="collision_material" rgba="1.0 0.28 0.1 0.9" />
    <mesh name="link1.stl" file="meshes/link1.stl" />
    <mesh name="link2.stl" file="meshes/link2.stl" />
    <mesh name="link3.stl" file="meshes/link3.stl" />
  </asset>

  <worldbody>
    <body name="link1" pos="0 0 0" quat="1 0 0 0">
      <joint name="flying_hand_free" type="free" damping="10"/>
      <inertial pos="-2.4368E-05 -1.4464E-04 4.1697E-02" quat="0.5 0.5 -0.5 0.5" mass="0.44089" diaginertia="0.00038 0.00028 0.0005" />
      <geom name="link1_collision" type="mesh" mesh="link1.stl" class="collision" />
      <geom name="link1_visual" material="black" type="mesh" mesh="link1.stl" class="visual" />
      <body name="link2" pos="-0.07 0.0002436 0.08657" quat="0.5 0.5 -0.5 0.5">
        <joint name="left_driver_joint" type="slide" ref="0.0" class="motor" range="0 0.036" axis="0 -1 0" />
        <inertial pos="-0.00035522 -0.007827 -0.0029883" quat="1.0 0.0 0.0 0.0" mass="0.064798" diaginertia="2e-05 3e-05 3e-05" />
        <geom name="link2_collision" pos="0 0 0" quat="1.0 0.0 0.0 0.0" type="mesh" mesh="link2.stl" class="collision" />
        <geom name="link2_visual" pos="0 0 0" quat="1.0 0.0 0.0 0.0" material="black" type="mesh" mesh="link2.stl" class="visual" />
      </body>
      <body name="link3" pos="0.07 0.00024366 0.08657" quat="0.5 0.5 -0.5 0.5">
        <joint name="right_driver_joint" type="slide" ref="0.0" class="motor" range="0 0.036" axis="0 1 0" />
        <inertial pos="-0.00035522 0.0078277 0.0024201" quat="1.0 0.0 0.0 0.0" mass="0.064798" diaginertia="2e-05 3e-05 3e-05" />
        <geom name="link3_collision" pos="0 0 0" quat="1.0 0.0 0.0 0.0" type="mesh" mesh="link3.stl" class="collision" />
        <geom name="link3_visual" pos="0 0 0" quat="1.0 0.0 0.0 0.0" material="black" type="mesh" mesh="link3.stl" class="visual" />
      </body>
    </body>
  </worldbody>

  <tendon>
    <fixed name="split">
      <joint joint="left_driver_joint" coef="0.5"/>
      <joint joint="right_driver_joint" coef="0.5"/>
    </fixed>
  </tendon>

  <equality>
    <joint joint1="left_driver_joint" joint2="right_driver_joint" polycoef="0 1 0 0 0" solimp="0.95 0.99 0.001"
      solref="0.005 1"/>
  </equality>

  <contact>
    <exclude body1="link1" body2="link2" />
    <exclude body1="link1" body2="link3" />
    <!-- <exclude body1="link2" body2="link3" /> -->
  </contact>

  <actuator>
    <!-- 6DOF motor control for flying hand -->
    <motor name="fx" joint="flying_hand_free" gear="10 0 0 0 0 0" ctrlrange="-500 500"/>
    <motor name="fy" joint="flying_hand_free" gear="0 10 0 0 0 0" ctrlrange="-500 500"/>
    <motor name="fz" joint="flying_hand_free" gear="0 0 10 0 0 0" ctrlrange="-500 500"/>
    <motor name="mx" joint="flying_hand_free" gear="0 0 0 10 0 0" ctrlrange="-10 10"/>
    <motor name="my" joint="flying_hand_free" gear="0 0 0 0 10 0" ctrlrange="-10 10"/>
    <motor name="mz" joint="flying_hand_free" gear="0 0 0 0 0 10" ctrlrange="-10 10"/>
    
    <!-- Gripper control -->
    <general name="fingers_actuator" tendon="split" forcerange="-5 20" ctrlrange="-5 10"
      gainprm="2 0 0" biasprm="0 0 -10"/>
  </actuator>
</mujoco>